@page
@model TaiRazorPages.Pages.RegisterModel
@{
}

@if (!string.IsNullOrEmpty(ViewData["ErrorEmail"] as string))
{
	<div class="alert alert-danger">
		@ViewData["ErrorEmail"]
	</div>
}
<form  method="post">
	

	<label asp-for="@Model.CustomerObject.Email">Email:</label>
	<input asp-for="@Model.CustomerObject.Email">
	<span asp-validation-for="@Model.CustomerObject.Email"></span>
	<br />

	<label asp-for="@Model.CustomerObject.Password">Password:</label>
	<input asp-for="@Model.CustomerObject.Password">
	<span asp-validation-for="@Model.CustomerObject.Password"></span>
	<br />
	<label asp-for="@Model.CustomerObject.CustomerName">Name:</label>
	<input asp-for="@Model.CustomerObject.CustomerName">
	<span asp-validation-for="@Model.CustomerObject.CustomerName"></span>
	<br />

	<label asp-for="@Model.CustomerObject.City">City:</label>
	<input asp-for="@Model.CustomerObject.City">
	<span asp-validation-for="@Model.CustomerObject.City"></span>
	<br />
	
	<label asp-for="@Model.CustomerObject.Country">Country:</label>
	<input asp-for="@Model.CustomerObject.Country">
	<span asp-validation-for="@Model.CustomerObject.Country"></span>
	<br />
	<label asp-for="@Model.CustomerObject.Birthday">Birth:</label>
		<input asp-for="@Model.CustomerObject.Birthday" type="date" asp-format="{0:yyyy-MM-dd}">
	@*<input asp-for="@Model.CustomerObject.Birthday">*@
<br />
	<button type="submit" class="btn btn-primary">Register</button>
	<a asp-page="/Login">Back to login</a>
</form>
